{% extends 'layout.html.twig' %}

{% block content %}
    <!-- main-container start -->
    <!-- ================ -->
    <section class="main-container padding-bottom-clear">

        <div class="container">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">
                    <h3 class="title">Pour un <strong>{{ service.type }}</strong> le <strong>{{ date | localizeddate('full', 'none', 'fr_FR', null, 'dd/MM/yyyy HH:mm') }}</strong></h3>
                    <div class="separator-2"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>{{ service.type }}</p>
                            <ul class="list-icons">
                                <li><i class="icon-check-1"></i> {{ service.price }}</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <div class="">
                                <div class="">
                                    <img src="{{ asset('uploads/pictures/'~service.business.mainPictureFilename) }}" alt="">
                                    <div class="overlay-bottom hidden-xs">
                                        <div class="text">
                                            <h3 class="title">We Can Do It</h3>
                                        </div>
                                    </div>
                                    <a href="#" class="popup-img overlay-link" title="image title"><i class="icon-plus-1"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- main end -->

            </div>
        </div>

        <!-- section start -->
        <!-- ================ -->
        <div class="light-gray-bg pv-20 section mt-20">
            <div class="container">
                <h4 class="mb-20">Our <strong>Team</strong></h4>
                <div class="row grid-space-10">

                    {% for employee in employees %}
                    <div class="col-sm-6 col-md-3">
                        <div class="image-box team-member style-2 shadow bordered mb-20 text-center">
                            <div class="overlay-container overlay-visible">
                                <img src="{{ asset('uploads/pictures/'~employee.mainPictureFilename) }}" alt="{{ employee.firstname }}">
                                <div class="overlay-bottom">
                                    <p class="small margin-clear">{{ employee.shortDescription }}</p>
                                </div>
                            </div>
                            <div class="body">
                                <h3 class="margin-clear">{{ employee.firstname }}</h3>
                                <small>Coiffeur</small>
                                <div class="separator mt-10"></div>
                                <div class="center">
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <a class="btn btn-default" href="{{ url('checkout_final_page', {'date': date, 'service': service.id, 'employee': employee.id}) }}">Reserver</a>
                                    {% else %}

                                        <a href="{{ url('fos_user_security_login') }}" class="btn btn-default btn-sm"><i class="fa fa-lock pr-10"></i> {{ 'login' | trans }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>
        </div>
        <!-- section end -->

    </section>
    <!-- main-container end -->

{% endblock %}